# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en0"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"

# ssh
alias socksoff='networksetup -setsocksfirewallproxystate "Wi-Fi" off'
alias sockson='networksetup -setsocksfirewallproxy "Wi-Fi" localhost 8080'
alias tunnel='ssh -D 8080 -C -N'
alias tnl='~/sshuttle/sshuttle 0/0 --dns -vvr'

#osx
alias showfiles='defaults write com.apple.finder AppleShowAllFiles YES; killall Finder /System/Library/CoreServices/Finder.app'
alias hidefiles='defaults write com.apple.finder AppleShowAllFiles NO; killall Finder /System/Library/CoreServices/Finder.app'

# Heroku
alias hc='heroku config --remote'
alias hcon='heroku run console --remote'
alias hrcon='heroku run rails console --remote'
alias hps='heroku ps --remote'
alias htail='heroku logs --tail --remote'
alias hpsql='heroku pg:psql --remote'

# Crashplan
alias crashplan-port='ssh -L 4200:localhost:4243'

# File sizes for current directory
alias ducks='du -cksh *' 
