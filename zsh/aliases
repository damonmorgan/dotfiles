# databases
alias pgstart='pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start'
alias pgstop='pg_ctl -D /usr/local/var/postgres stop -s -m fast'

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en0"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"

# ssh
alias socksoff='networksetup -setsocksfirewallproxystate "Wi-Fi" off'
alias sockson='networksetup -setsocksfirewallproxy "Wi-Fi" localhost 8080'
alias tunnel='ssh -D 8080 -C -N'
alias tnl='~/sshuttle/sshuttle 0/0 --dns -vvr'

# Heroku
alias heroku-config-staging='heroku config --remote heroku-staging'
alias heroku-console-staging='heroku run console --remote heroku-staging'
alias heroku-ps-staging='heroku ps --remote heroku-staging'
alias heroku-logs-staging='heroku logs --tail --remote heroku-staging'
alias heroku-config-production='heroku config --remote heroku'
alias heroku-console-production='heroku run console --remote heroku'
alias heroku-ps-production='heroku ps --remote heroku'
alias heroku-logs-production='heroku logs --tail --remote heroku'

# Crashplan
alias crashplan-port='ssh -L 4200:localhost:4243'
