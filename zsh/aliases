# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en0"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"

# ssh
alias socksoff='networksetup -setsocksfirewallproxystate "Wi-Fi" off'
alias sockson='networksetup -setsocksfirewallproxy "Wi-Fi" localhost 8080'
alias tunnel='ssh -D 8080 -C -N'
alias tnl='~/sshuttle/sshuttle 0/0 --dns -vvr'

#osx
alias showfiles='defaults write com.apple.finder AppleShowAllFiles YES; killall Finder /System/Library/CoreServices/Finder.app'
alias hidefiles='defaults write com.apple.finder AppleShowAllFiles NO; killall Finder /System/Library/CoreServices/Finder.app'

# Heroku
alias h-config-staging='heroku config --remote heroku-staging'
alias h-console-staging='heroku run console --remote heroku-staging'
alias h-ps-staging='heroku ps --remote heroku-staging'
alias h-tail-staging='heroku logs --tail --remote heroku-staging'
alias h-psql-staging='heroku pg:psql --remote heroku-staging'
alias h-config-production='heroku config --remote heroku'
alias h-console-production='heroku run console --remote heroku'
alias h-ps-production='heroku ps --remote heroku'
alias h-tail-production='heroku logs --tail --remote heroku'
alias h-psql-production='heroku pg:psql --remote heroku'

# Crashplan
alias crashplan-port='ssh -L 4200:localhost:4243'
